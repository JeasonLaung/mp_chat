/* pages/chat/index.wxss */

/* gobal */
page{
  color: #111;
  background-color: #efefef;
}

.chat{
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* header */
.chat-header{
  min-height: 40px;
  height: 40px;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  position: fixed;
  z-index: 99;
  align-items: center;
  background: #fff;
  position: relative;
}
.chat-header-title{
  /* position: absolute;
  left: 50%;
  top: 50%;
  font-weight: 500;
  transform: translate(-50%, -50%); */
}
.iconfont.icon-back{
  height: 100%;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}
.iconfont.icon-back:active{
  background-color: #f0f0f0;
}

/* body */
.chat-body{
  flex: 1;

}
.chat-body-chat{
  padding-top: 20rpx;
}
.chat-body-chat-avatar{
  padding: 0 20rpx 0 20rpx;
  min-height: 80rpx;
  min-width: 80rpx;
  height: 80rpx;
  width: 80rpx;
  overflow: hidden;
}
.chat-body-chat-avatar image{
  border-radius: 10rpx;
  height: 100%;
  width: 100%;
}
.chat-body-chat-body{
  position: relative;
  display: flex;
  max-width: 450rpx;
  align-items: center;
  font-size: 30rpx;
  padding: 15rpx;
  border-radius: 10rpx;
}
.chat-body-chat.me .chat-body-chat-body{
  background-color: #99CC8F;
}
.chat-body-chat.other .chat-body-chat-body{
  background-color: #fff;
}

.chat-body-chat.me .chat-body-chat-body::after{
  position: absolute;
  content: "";
  z-index: 99;
  display: block;
  right: -30rpx;
  top: 25rpx;
  border-top: 20rpx solid transparent;
  border-left: 20rpx solid #99CC8F;
  border-bottom: 20rpx solid transparent;
  border-right: 20rpx solid transparent;
}
.chat-body-chat.other .chat-body-chat-body::after{
  position: absolute;
  content: "";
  z-index: 99;
  display: block;
  left: -30rpx;
  top: 25rpx;
  border-top: 20rpx solid transparent;
  border-left: 20rpx solid transparent;
  border-bottom: 20rpx solid transparent;
  border-right: 20rpx solid #fff;
}

.chat-body-chat.me{
  display: flex;
  flex-direction: row-reverse;
}
.chat-body-chat.other{
  display: flex;
  justify-content: flex-start;
}
.chat-body-time{
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  font-size: 27rpx;
  color: #ccc;
}

/* footer */
.pre-chat-footer{
  height: 44px;
}
.chat-footer{
  background-color: #f5f5f5;
  padding: 10px;
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  align-items: flex-end;
  z-index: 99;
}
.chat-footer textarea{
  flex: 1;
  padding: 15rpx 20rpx;
  border-radius: 5rpx;
  line-height: 32rpx;
  background-color: #fff;
}
.chat-footer-send{
  padding: 15rpx 30rpx;
  background: #99CC8F;
  margin-left: 10rpx;
  font-size: 30rpx;
  color: #fff;
  border-radius: 10rpx;
}
.chat-footer-send:active{
  filter: brightness(.9);
}
.chat-footer-tool .iconfont{
  font-size: 52rpx;
  padding: 5rpx;
  color: #111;
}
.chat-footer-tool{
  display: flex;
  padding-left: 10rpx;
  align-items: center;
}